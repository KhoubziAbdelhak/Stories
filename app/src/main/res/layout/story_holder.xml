<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:padding="10dp">


    <ImageView
        android:id="@+id/scene_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:adjustViewBounds="true"
        android:src="@drawable/the_wolf_and_the_lamp_scene_4" />

    <TextView
        android:id="@+id/scene_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scene_image"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/cipote"
        android:gravity="center"
        android:text="â€” Sire, replies the Lamb, may your Majesty
Don't get angry;
But rather than she considers
That I go quenching my thirst
In the current,
