<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/story_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:clickable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/story_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:scaleType="fitXY"
                android:src="@drawable/storyimage1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:background="@color/black" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:layout_weight="1"
                android:fontFamily="@font/story_name_font"
                android:shadowColor="@color/white"
                android:shadowRadius="7"
                android:text="Story Title"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="33sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/set_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="13dp"
                android:layout_weight="0"
                android:background="@null"
                android:clickable="true"
                android:contentDescription="@string/favorite_fragment"
                android:onClick="favoriteClick"
                android:src="@drawable/icon_favorite" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>